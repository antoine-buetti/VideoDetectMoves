process {
    // Set a common base container for all processes
    container = 'ubuntu:22.04'

    withName: 'plot' {
        container = 'rocker/r-base:4.3.0'
        conda = 'conda-forge::procps-ng'  // Wave adds ps automatically
    }
}

docker {
    enabled = true
    runOptions = '-u $(id -u):$(id -g)'
}

conda {
    enabled = true
    channels = ['conda-forge', 'bioconda', 'defaults']
}

