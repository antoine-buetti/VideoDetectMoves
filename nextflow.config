process {
    // Set a common base container for all processes
    container = 'ubuntu:22.04'

    // Override for specific processes that need specialized tools
    withName: 'get_frames' {
        container = 'olmesm/mplayer-docker'
    }

    withName: 'movement_spotter' {
        container = 'vulhub/imagemagick:7.0.10-36-php'
    }

    withName: 'plot' {
        container = 'rocker/r-base:4.3.0'
    }
}

docker {
    enabled = true
    runOptions = '-u $(id -u):$(id -g)'
}
